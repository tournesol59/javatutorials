<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="DEBUG">
      <AppenderRef ref="Console"/>
    </Root>
    <logger name="com.baeldung" level="DEBUG">
      <AppenderRef ref="Console"/>
    </logger>       
    <logger name="com.baeldung.demo" level="DEBUG">
      <AppenderRef ref="Console"/>
    </logger>
    <logger name="com.baeldung.dao" level="DEBUG">
      <AppenderRef ref="Console"/>
    </logger>    
    </Loggers>
</Configuration>

